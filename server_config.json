{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "."
            ]
        }
    }
}


{
    "mcpServers": {
        "airbnb": {
            "command": "npx",
            "args": [
                "-y",
                "@openbnb/mcp-server-airbnb",
                "--ignore-robots-txt"
            ]
        }
    }
}


{
    "mcpServers": {
        "filesystem": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "THE_PATH_TO_YOUR_DIRECTORY",
            ],
        }
    }
}


{
    "mcpServers": {
        "playwright-chrome-mine": {
            "command": "npx",
            "args": [
                "@playwright/mcp@latest",
                "--executable-path",
                "/usr/bin/google-chrome"
            ],
            "env": {
                "DISPLAY": ":1"
            }
        }
    }
}