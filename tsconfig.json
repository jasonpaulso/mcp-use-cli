{
	"compilerOptions": {
		"target": "ES2022",
		"rootDir": "source",
		"module": "Node16",
		"moduleResolution": "Node16",
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"strict": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
		"source/**/*.ts",
		"source/**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}